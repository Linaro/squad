<div class='row row-bordered {{test.status}} tests-{{status.id}}-{{test.status}}{% if test.has_known_issues %} known-issue{% endif %}'>
    <div class='col-md-7 col-sm-7'>
        <a href="{{testrun_suite_test_details_url(project.group, project, build, status, test)}}">
            <i class='fa fa-{% if test.status == "fail" %}times{% elif test.status == "pass" %}check{% else %}bug{% endif %}'></i>
            {{test.name}} â€” {{test.status|upper}}
        </a>
        {% if test.has_known_issues %}
        {% for known_issue in test.known_issues.all() %}
            {{ _('Known issue:') }}
            {% if known_issue.url %}
                <a href="{{known_issue.url}}">{{known_issue.title}}</a>{% if known_issue.intermittent %} {{ _('(intermittent).') }}{% endif %}
            {% else %}
                {{known_issue.title}}{% if known_issue.intermittent %} {{ _('(intermittent.)') }}{% endif %}
            {% endif %}
        {% endfor %}
        {% endif %}
    </div>
    <div class='col-md-1 col-sm-1'>
        <a href="{{testrun_suite_test_details_history_url(project.group, project, build, status, test)}}">{{ _('History') }}</a>
    </div>
    <div class='col-md-1 col-sm-1'>
        <a class="pull-right" href="{{ url('test_details_log', args=[test.test_run.build.project.group.slug, test.test_run.build.project.slug, test.test_run.build.version, test.test_run.id, test.suite.slug.replace('/', '_'), test.name.replace('/', '_')]) }}">{{ _('Full log') }}</a>
    </div>
    <div class='col-md-1 col-sm-1'>
        <a class="pull-right" href="/_/comparetest/?project={{ test.test_run.build.project.pk }}&suite={{ test.suite.slug }}&test={{ test.name }}">{{ _('compare') }}</a>
    </div>
    <div class='col-md-2 col-sm-2'>
        {% if test.metadata.description or suite.metadata.instructions_to_reproduce or test.metadata.instructions_to_reproduce or test.log %}
        <a href='#'
           onclick='$(".test-description-{{test.id}}").toggle(); return false'
           class='test-description-{{test.id}}'
        ><span class='fa fa-info-circle'></span> {{ _('Show info') }}</a>
        <a href='#'
           onclick='$(".test-description-{{test.id}}").toggle(); return false'
           class='test-description-{{test.id}}'
           style='display: none'
        ><span class='fa fa-info-circle'></span> {{ _('Hide info') }}</a>
        {% endif %}
    </div>
    {% if test.metadata.description or suite.metadata.instructions_to_reproduce or test.metadata.instructions_to_reproduce or test.log%}
    <div class='test-description test-description-{{test.id}} col-md-12 col-sm-12' style='display: none'>
        {% if test.metadata.description %}
        <p><strong>{{ _('Test description:') }}</strong></p>
        <div>
        {{test.metadata.description|markdown}}
        </div>
        {% endif %}

        {% if suite.metadata.instructions_to_reproduce or test.metadata.instructions_to_reproduce %}
        <p><strong>{{ _('How to reproduce:') }}</strong></p>
        <div>
        {{suite.metadata.instructions_to_reproduce|markdown}}
        {{test.metadata.instructions_to_reproduce|markdown}}
        </div>
        {% endif %}

        {% if test.log %}
        <p><strong>{{ _('Test log:') }}</strong></p>
        <pre>{{test.log}}</pre>
        {% endif %}
    </div>
    {% endif %}
</div>

