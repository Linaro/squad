<span class="badge" data-toggle="tooltip" data-placement="top">{{ _('%d tests') % status.tests_total }}</span>
{% if status.tests_pass > 0 %}
<span class="badge alert-success" data-toggle="tooltip" data-placement="top">{{_('%d pass') % status.tests_pass }}</span>
{% endif %}
{% if status.tests_skip > 0 %}
<span class="badge alert-warning" data-toggle="tooltip" data-placement="top">{{ _('%d skip') % status.tests_skip }}</span>
{% endif %}
{% if status.tests_fail > 0 %}
<span class="badge alert-danger" data-toggle="tooltip" data-placement="top">{{ _('%d fail') % status.tests_fail }}</span>
{% endif %}
{% if status.tests_xfail > 0 %}
<span class="badge alert-info" data-toggle="tooltip" data-placement="top">{{ _('%d xfail') % status.tests_xfail }}</span>
{% endif %}
