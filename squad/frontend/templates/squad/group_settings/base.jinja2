{% extends "squad/base.jinja2" %}

{% block content %}

{% with pagetitle=_('Group settings') %}
{% include "squad/group-nav.jinja2" %}
{% endwith %}

<div>&nbsp;</div>

<div id='group-settings' class='row'>
    <div class='col-md-3'>
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>{{ _('Group settings') }}</strong>
            </div>
            <ul class="list-group settings-nav">
                {% with url_name=request.resolver_match.url_name %}
                <li class="list-group-item {% if url_name == "group-settings" %}active{% endif %}"><a href="{{url("group-settings", args=[group.slug])}}">{{ _('Basics') }}</a></li>
                <li class="list-group-item {% if url_name == "group-members" %}active{% endif %}"><a href="{{url("group-members", args=[group.slug])}}">{{ _('Members') }}</a></li>
                <li class="list-group-item {% if url_name == "group-advanced-settings" %}active{% endif %}"><a href="{{url("group-advanced-settings", args=[group.slug])}}">{{ _('Advanced') }}</a></li>
                <li class="list-group-item {% if url_name == "group-delete" %}active{% endif %}"><a href="{{url("group-delete", args=[group.slug])}}">{{ _('Delete group') }}</a></li>
                {% endwith %}
            </ul>
        </div>
    </div>
    <div class='col-md-9'>
        {% block settings %}{% endblock %}
    </div>
</div>

{% endblock %}


