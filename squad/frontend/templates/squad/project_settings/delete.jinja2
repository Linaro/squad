{% extends "squad/project_settings/base.jinja2" %}

{% block settings %}

    <div class='panel panel-danger'>
        <div class='panel-heading'>
        <h1>Delete project</h1>
        </div>
        <div class='panel-body'>
            <p>
            Once you delete your project, all of its data
            will be <strong>removed permanently</strong>.
            </p>
            <form method="POST">
                {{crispy(form)}}
                <input class='btn btn-danger' type="submit" value="Delete project" />
            </form>
        </div>
    </div>

{% endblock %}
