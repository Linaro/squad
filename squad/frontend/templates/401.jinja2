{% extends "squad/base.jinja2" %}

{% block content %}
{% if user.is_authenticated %}
<h1>Permission denied</h1>
<p>
You are not allowed to access this content.
</p>
{% else %}
<h1>Authentication required</h1>
<p>
<a href="/login?next={{request.path}}">Go to the login page</a>.
</p>
{% endif %}

{% endblock %}
